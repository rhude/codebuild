{
  "name": "transcript-connections-app",
  "version": "0.0.1",
  "main": "server/server.js",
  "description": "Transcript Connections app for Third Bridge",
  "private": true,
  "scripts": {
    "server:install": "docker-compose build && yarn",
    "server:lint": "./node_modules/eslint/bin/eslint.js server tests",
    "server:start": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml -p \"transcriptconnections\" up",
    "server:start:daemon": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml -p \"transcriptconnections\" up -d",
    "server:stop": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml stop",
    "server:test": "docker exec -it transcriptconnections_loopback_1 bash -c \"yarn server:test:container\"",
    "server:test:container": "yarn server:lint && istanbul cover mocha --file tests/setupTests.js -- tests/**/* tests/**/**/*.js -R spec",
    "server:connect": "docker exec -it transcriptconnections_loopback_1 bash",
    "server:watch": "nodemon --inspect=0.0.0.0:30022 -L server/server.js --ignore tests/ --ignore client/ --ignore cypress/",
    "db:connect": "docker exec -it transcriptconnections_db_1 bash -c \"mysql -Uroot transcription -p\"",
    "db:start": "docker-compose up -d db&",
    "db:stop": "docker-compose down -d db",
    "model:create": "docker exec -it transcriptconnections_loopback_1 bash -c \"lb model\"",
    "migrate:create": "./node_modules/db-migrate/bin/db-migrate create",
    "migrate:down": "./node_modules/db-migrate/bin/db-migrate down",
    "migrate:up": "./node_modules/db-migrate/bin/db-migrate up",
    "client:install": "cd client && yarn",
    "client:start": "cd client && yarn start",
    "client:build:prod": "cd client && yarn build:production",
    "client:build:non_prod": "cd client && yarn build:staging",
    "client:build:dev": "cd client && yarn build:dev",
    "client:test": "cd client && yarn test",
    "client:watch": "cd client && yarn watch",
    "posttest": "yarn server:lint && nsp check",
    "start": "node .",
    "deploy:staging": "sh deploy.sh staging && eb deploy",
    "deploy:production": "sh deploy.sh production && eb deploy",
    "e2e:test": "cypress run"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bluebird": "^3.5.0",
    "chai-as-promised": "^7.1.1",
    "compression": "^1.0.3",
    "connect-history-api-fallback": "1.3.0",
    "cors": "^2.5.2",
    "db-migrate": "^0.10.0-beta.23",
    "db-migrate-mysql": "^1.1.10",
    "dotenv": "^6.0.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "helmet": "^1.3.0",
    "lodash": "^4.17.4",
    "loopback": "^3.0.0",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^2.4.0",
    "loopback-component-storage": "^3.3.1",
    "loopback-connector-mysql": "^2.4.1",
    "mockdate": "^2.0.2",
    "mockery": "^2.1.0",
    "moment": "^2.19.1",
    "morgan": "^1.9.0",
    "nodemon": "^1.12.0",
    "serve-favicon": "^2.0.1",
    "sqlstring": "^2.3.1",
    "strong-error-handler": "^1.0.1",
    "winston": "^3.0.0-rc5",
    "wkhtmltopdf": "^0.3.4"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.14.1",
    "chai": "^3.5.0",
    "cypress": "^2.1.0",
    "eslint": "^2.13.1",
    "eslint-config-loopback": "^4.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nsp": "^2.1.0",
    "sinon": "^2.0.0",
    "sinon-chai": "^2.8.0",
    "supertest": "^3.0.0"
  },
  "license": "UNLICENSED"
}
